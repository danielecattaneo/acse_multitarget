ACSE=../../bin/acse
NASM?=nasm
CC?=cc
os?=$(shell uname)
executables=$(patsubst %.src,%,$(wildcard *.src))
objects=$(patsubst %.src,%.o,$(wildcard *.src))
runtime="$(CURDIR)"/../../acse/amd64/runtime/lance_rt.c

ifeq ($(os), Darwin)
	NASMFLAGS+=-f macho64
else
	NASMFLAGS+=-f elf64
endif

test: $(executables)

%: %.o
	$(CC) $< $(runtime) $(CFLAGS) -o $@

%.o : %.asm
	$(NASM) $< $(NASMFLAGS) -o $@

%.asm : %.src $(ACSE)
	$(ACSE) $< $@

.PRECIOUS: %.asm %.o

.PHONY: clean test

clean :
	rm -f *.out
	rm -f *.cfg
	rm -f *.asm
	rm -f *.o
	rm -f $(executables)
